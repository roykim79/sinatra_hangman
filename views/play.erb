<% if @game.game_status == 'going' %>
  <p>Guesses left: <%= @game.guesses_left %></p>
  <p class="show-word spaced"><%= @game.show_word %></p>

  <form id="guess" class="" action="/play/<%= @game.id %>" method="post">
    <input class="form-control" type="text" name="letter" value="">
    <button class="btn btn-primary" type="submit" name="button">Guess</button>
  </form>
<% elsif @game.game_status == 'won' %>
  <h1>Congratulations, you win</h1>
<% else %>
  <h1>You have failed</h1>
<% end %>
